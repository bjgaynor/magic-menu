<div class="container">
  <h1>Welcome to Sage's!</h1>
  <p>Home of gruel, porridge, and hash</p>

  <div class="new_item"></div>

  <em>Create an item</em> 

  <form action="/items" method="post">
		<input type="text" class="add_item" name="item[name]" placeholder="Item Name">
		<input type="text" class="add_item" name="item[price]" placeholder="Item Price">
		<input type="submit" class="add" value="Add Item">
	</form>

 
	<div class="new-item">
  	<h3>Your Items:</h3>
 	</div>
  	
	<div class="list_items">
  	<% @items.each do |item| %>
  		<div class="item">
  			<a href="/items/<%= item.id %>"><%= item.name %></a>
  		</div>
  	<% end %>
  </div>

</div>
