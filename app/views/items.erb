<form id='items' action='/items' method='post'>
  <input id='name' type='text' name='item[name]' placeholder='name'>
  <input id='price' type='text' name='item[price]' placeholder='price'>
  <input type='submit' value='Add Item'>
</form>

<ul id='all_items'>
<% @items.each do |item| %>
  <li><%= item.name + ' '%><%= item.price %></li>
<%end%>
</ul>