<form action='/items' method='post'>
  <input type='text' name='item[name]' placeholder='name'>
  <input type='text' name='item[price]' placeholder='price'>
  <input type='submit' value='Add Item'>
</form>

<ul>
<% @items.each do |item| %>
  <li><%= item.name + ' '%><%= item.price %></li>
<%end%>
</ul>